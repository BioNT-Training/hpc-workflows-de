root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false  # keep trailing spaces in markdown - 2+ spaces are translated to a hard break (<br/>)

[*.py]
indent_size = 4
indent_style = space

[*.Rmd]
indent_size = 2
indent_style = space

[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab
